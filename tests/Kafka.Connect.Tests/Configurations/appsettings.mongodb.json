{
  "worker": {
    "connectors": {
      "mongodb-sink-connector": {
        "groupId": "mongodb-sink-connector",
        "topics": ["mongodb-sink-data-topic"],
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "processors": {
          "1": {
            "name": "Kafka.Connect.Processors.WhitelistFieldProjector",
            "settings":   [
              "userId",
              "userName",
              "email",
              "timestamp",
              "action"
            ]
          }
        },
        "plugin": {
          "type": "sink",
          "name": "mongodb",
          "handler": "Kafka.Connect.MongoDb.MongoPluginHandler",
          "strategy": {
            "Name": "Kafka.Connect.MongoDb.Strategies.UpsertStrategy"
          },
          "properties":{
            "connectionUri": "mongodb://admin:admin@mongodb:27017",
            "database": "kafka_connect_db",
            "collection": "sink-collection",
            "filter": "{\"userId\": \"#userId#\"}"
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "userId",
            "userName"
          ]
        }
      },
      "mongodb-source-connector": {
        "groupId": "mongodb-source-connector",
        "topics": [],
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "plugin": {
          "type": "source",
          "name": "mongodb",
          "handler": "Kafka.Connect.MongoDb.MongoPluginHandler",
          "strategy": {
            "Name": "Kafka.Connect.MongoDb.Strategies.ReadStrategy"
          },
          "properties": {
            "connectionUri": "mongodb://admin:admin@mongodb:27017",
            "database": "kafka_connect_db",
            "collection": "source_collection",
            "useChangeStreams": false,
            "commands": {
              "read": {
                "topic": "mongodb-source-data-topic",
                "collection": "source_collection",
                "keys": ["userId"],
                "filters": {
                  "userId": null
                }
              }
            }
          }
        },
        "faultTolerance": {
          "batches": {
            "size": 100,
            "parallelism": 1,
            "interval": 1000,
            "poll": 500
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "userId",
            "userName"
          ]
        }
      }
    }
  }
}