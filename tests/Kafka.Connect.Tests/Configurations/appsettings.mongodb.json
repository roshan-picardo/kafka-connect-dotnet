{
  "worker": {
    "connectors": {
      "mongodb-sink-connector": {
        "groupId": "mongodb-sink-connector",
        "topics": ["mongodb-sink-data-topic"],
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "processors": {
          "1": {
            "name": "Kafka.Connect.Processors.WhitelistFieldProjector",
            "settings":   [
              "userId",
              "userName",
              "email",
              "timestamp",
              "action"
            ]
          }
        },
        "plugin": {
          "type": "sink",
          "name": "mongodb",
          "handler": "Kafka.Connect.MongoDb.MongoPluginHandler",
          "strategy": {
            "Name": "Kafka.Connect.MongoDb.Strategies.UpsertStrategy"
          },
          "properties":{
            "connectionUri": "mongodb://mongodb:27017/?replicaSet=rs0",
            "database": "kafka_connect_db",
            "collection": "sink-collection",
            "filter": "{\"userId\": \"#userId#\"}"
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "userId",
            "userName"
          ]
        }
      },
      "mongodb-source-connector": {
        "groupId": "mongodb-source-connector",
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "plugin": {
          "type": "source",
          "name": "mongodb",
          "handler": "Kafka.Connect.MongoDb.MongoPluginHandler",
          "strategy": {
            "name": "Kafka.Connect.MongoDb.Strategies.StreamsReadStrategy"
          },
          "properties": {
            "connectionUri": "mongodb://mongodb:27017/?replicaSet=rs0",
            "database": "kafka_connect_db",
            "commands": {
              "watch-source-collection": {
                "topic": "mongodb-source-data-topic",
                "collection": "source-collection",
                "keys": ["userId"],
                "timestamp": 0
              }
            }
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "id",
            "timestamp",
            "operation",
            "after.userId",
            "after.userName",
            "after.email"
          ]
        }
      }
    }
  }
}