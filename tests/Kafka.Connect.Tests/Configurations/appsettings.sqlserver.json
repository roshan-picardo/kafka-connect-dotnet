{
  "worker": {
    "connectors": {
      "test-sqlserver-local": {
        "groupId": "test-sqlserver-local",
        "topics": ["sqlserver-sink-data-topic"],
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "processors": {
          "1": {
            "name": "Kafka.Connect.Processors.WhitelistFieldProjector",
            "settings": [
              "userId",
              "userName",
              "email",
              "timestamp",
              "action"
            ]
          }
        },
        "plugin": {
          "type": "sink",
          "name": "sqlserver",
          "handler": "Kafka.Connect.SqlServer.SqlServerPluginHandler",
          "strategy": {
            "Name": "Kafka.Connect.SqlServer.Strategies.UpsertStrategy"
          },
          "properties": {
            "server": "sqlserver",
            "port": 1433,
            "userId": "sa",
            "password": "YourStrong@Passw0rd",
            "database": "kafka_connect_db",
            "schema": "dbo",
            "table": "sink_table",
            "lookup": "[userId]='#userId#'",
            "filter": "[userId]='#userId#'"
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "timestamp",
            "operation",
            "after.id",
            "after.name",
            "id",
            "name"
          ]
        }
      }
    }
  }
}