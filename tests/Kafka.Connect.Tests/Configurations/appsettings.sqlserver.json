{
  "worker": {
    "connectors": {
      "sqlserver-sink-connector": {
        "groupId": "sqlserver-sink-connector",
        "topics": ["sqlserver-sink-data-topic"],
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "processors": {
          "1": {
            "name": "Kafka.Connect.Processors.WhitelistFieldProjector",
            "settings": [
              "userId",
              "userName",
              "email",
              "timestamp",
              "action"
            ]
          }
        },
        "plugin": {
          "type": "sink",
          "name": "sqlserver",
          "handler": "Kafka.Connect.SqlServer.SqlServerPluginHandler",
          "strategy": {
            "Name": "Kafka.Connect.SqlServer.Strategies.UpsertStrategy"
          },
          "properties": {
            "server": "sqlserver",
            "port": 1433,
            "userId": "sa",
            "password": "YourStrong@Passw0rd",
            "database": "kafka_connect_db",
            "schema": "dbo",
            "table": "sink_table",
            "lookup": "[userId]='#userId#'",
            "filter": "[userId]='#userId#'"
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "timestamp",
            "operation",
            "after.id",
            "after.name",
            "id",
            "name"
          ]
        }
      },
      "sqlserver-source-connector": {
        "groupId": "sqlserver-source-connector",
        "tasks": 1,
        "paused": false,
        "disabled": false,
        "plugin": {
          "type": "source",
          "name": "sqlserver",
          "handler": "Kafka.Connect.SqlServer.SqlServerPluginHandler",
          "strategy": {
            "name": "Kafka.Connect.SqlServer.Strategies.ReadStrategy"
          },
          "properties": {
            "server": "sqlserver",
            "port": 1433,
            "userId": "sa",
            "password": "YourStrong@Passw0rd",
            "database": "kafka_connect_db",
            "changelog": {
              "schema": "dbo",
              "table": "kafka_connect_audit"
            },
            "commands": {
              "read-source-table": {
                "topic": "sqlserver-source-data-topic",
                "table": "source_table",
                "schema": "dbo",
                "keys": ["userId"],
                "snapshot": {
                  "enabled": false,
                  "key": "userId"
                }
              }
            }
          }
        },
        "log": {
          "provider": "",
          "attributes": [
            "id",
            "timestamp",
            "operation",
            "after.userId",
            "after.userName",
            "after.email"
          ]
        }
      }
    }
  }
}