{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Kafka.Connect": "Trace",
      "Kafka.Connect.Tests": "Trace",
      "System.Net.Http.HttpClient": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff ",
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "File": {
      "Path": "/app/logs/kafka-connect-test.log",
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Debug"
      }
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "kafka:29092",
    "GroupId": "kafka-connect-test-group",
    "ClientId": "kafka-connect-test-client",
    "AutoOffsetReset": "Earliest",
    "EnableAutoCommit": false,
    "SessionTimeoutMs": 10000,
    "MaxPollIntervalMs": 600000,
    "MessageTimeoutMs": 30000,
    "RequestTimeoutMs": 30000,
    "MetadataMaxAgeMs": 300000,
    "SecurityProtocol": "Plaintext",
    "SaslMechanism": "Plain",
    "EnableSslCertificateVerification": false,
    "Debug": "broker,topic,msg"
  },
  "ConnectionStrings": {
    "MySQL": "Server=mysql;Port=3306;Database=testdb;Uid=testuser;Pwd=testpass;AllowUserVariables=true;UseAffectedRows=false;",
    "PostgreSQL": "Host=postgres;Port=5432;Database=testdb;Username=testuser;Password=testpass;Include Error Detail=true;",
    "MongoDB": "mongodb://testuser:testpass@mongodb:27017/testdb?authSource=admin&retryWrites=true&w=majority",
    "SqlServer": "Server=sqlserver;Database=testdb;User Id=sa;Password=TestPass123!;TrustServerCertificate=true;",
    "Oracle": "Data Source=oracle:1521/XE;User Id=testuser;Password=testpass;"
  },
  "Plugins": {
    "Path": "/app/plugins",
    "Enabled": ["MySql", "PostgreSql", "MongoDb", "SqlServer", "Oracle"],
    "LoadTimeout": "00:01:00",
    "ScanInterval": "00:05:00",
    "AutoReload": true
  },
  "Worker": {
    "MaxTasks": 10,
    "TaskTimeout": "00:05:00",
    "HeartbeatInterval": "00:00:30",
    "SessionTimeout": "00:01:00",
    "RebalanceTimeout": "00:02:00",
    "RetryBackoffMs": 1000,
    "MaxRetries": 3
  },
  "Connector": {
    "DefaultBatchSize": 1000,
    "DefaultPollInterval": "00:00:05",
    "DefaultMaxRetries": 3,
    "DefaultRetryBackoff": "00:00:01",
    "DefaultTimeout": "00:01:00"
  },
  "Api": {
    "Port": 8083,
    "Host": "0.0.0.0",
    "BasePath": "/",
    "EnableSwagger": true,
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "RequestTimeout": "00:01:00",
    "MaxRequestSize": "10MB"
  },
  "HealthChecks": {
    "Enabled": true,
    "Interval": "00:00:30",
    "Timeout": "00:00:10",
    "UnhealthyThreshold": 3,
    "HealthyThreshold": 1
  },
  "Metrics": {
    "Enabled": true,
    "Port": 9090,
    "Path": "/metrics",
    "Interval": "00:00:15"
  },
  "TestSettings": {
    "Environment": "Testing",
    "EnableTestEndpoints": true,
    "TestDataPath": "/app/testdata",
    "CleanupOnShutdown": true,
    "MockExternalServices": false,
    "TestTimeout": "00:05:00",
    "MaxConcurrentTests": 5
  },
  "MySQL": {
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "MaxPoolSize": 20,
    "MinPoolSize": 5,
    "ConnectionLifetime": 300,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30"
  },
  "PostgreSQL": {
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "MaxPoolSize": 20,
    "MinPoolSize": 5,
    "ConnectionLifetime": 300,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 3,
    "MaxRetryDelay": "00:00:30"
  },
  "MongoDB": {
    "ConnectionTimeout": "00:00:30",
    "SocketTimeout": "00:01:00",
    "MaxPoolSize": 20,
    "MinPoolSize": 5,
    "MaxIdleTime": "00:05:00",
    "EnableRetryWrites": true,
    "EnableRetryReads": true,
    "ReadPreference": "Primary"
  },
  "Topics": {
    "DefaultPartitions": 3,
    "DefaultReplicationFactor": 1,
    "RetentionMs": 604800000,
    "CleanupPolicy": "delete",
    "CompressionType": "snappy",
    "MaxMessageBytes": 1048576
  },
  "Serialization": {
    "DefaultKeySerializer": "String",
    "DefaultValueSerializer": "Json",
    "EnableSchemaRegistry": false,
    "SchemaRegistryUrl": "",
    "AvroSettings": {
      "UseLogicalTypes": true,
      "EnableDecimalLogicalType": true
    }
  },
  "ErrorHandling": {
    "EnableDeadLetterQueue": true,
    "DeadLetterTopicSuffix": ".dlq",
    "MaxRetries": 3,
    "RetryBackoffMs": 1000,
    "ToleranceLevel": "All"
  },
  "Security": {
    "EnableAuthentication": false,
    "EnableAuthorization": false,
    "AllowAnonymous": true,
    "RequireHttps": false,
    "EnableCors": true,
    "CorsOrigins": ["*"]
  }
}